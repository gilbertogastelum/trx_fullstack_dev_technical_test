{
    "root": true,
    "ignorePatterns": [
        "projects/**/*"
    ],
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "parserOptions": {
                "project": [
                    "tsconfig.json"
                ],
                "createDefaultProgram": true
            },
            "rules": {
                "semi": "warn",
                "eqeqeq": "warn",
                "camelcase": "warn"
            }
        }
    ]
}